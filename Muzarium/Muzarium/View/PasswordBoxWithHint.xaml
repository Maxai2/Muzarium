<UserControl x:Class="Muzarium.View.PasswordBoxWithHint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
													xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
													xmlns:common="clr-namespace:Muzarium.Common"
             xmlns:local="clr-namespace:Muzarium.View"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="600">
	<Grid>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		
		<Grid Grid.Column="0">
			<PasswordBox x:Name="PassBox" />
			<TextBox x:Name="FakePass" Visibility="Collapsed"/>
		</Grid>
		
		<Button Grid.Column="1" Width="50" Command="{Binding ClickCommand}">
			<Button.CommandParameter>
				<common:ConvertParameter x:Name="param"/>
			</Button.CommandParameter>
			<Grid>
				<material:PackIcon Kind="Eye"/>
				<material:PackIcon Kind="EyeOff" IsEnabled="False"/>
			</Grid>
		</Button>
		
	</Grid>
</UserControl>
