<UserControl x:Class="Muzarium.View.PasswordBoxWithHint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
													xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Muzarium.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400" Name="HintBox">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		
		<Grid Grid.Column="0">
			<PasswordBox x:Name="PassBox" material:HintAssist.Hint="Password"/>
			<TextBox x:Name="FakePass" Text="{Binding Password, ElementName=PassBox, Mode=TwoWay }" Visibility="Collapsed"/>
		</Grid>

		<Button Grid.Column="1" Width="{Binding DesignHeight, ElementName=HintBox}" Command="{Binding ShowCommand}" Background="Transparent" BorderThickness="0">
				<material:PackIcon Kind="Eye"/>
		</Button>

		<!--<Button Grid.Column="1" Width="{Binding DesignHeight, ElementName=HintBox}" Command="{Binding HintCommand}" Visibility="Collapsed" Background="Transparent" BorderThickness="0">
				<material:PackIcon Kind="EyeOff"/>
		</Button>-->
		
	</Grid>
</UserControl>
